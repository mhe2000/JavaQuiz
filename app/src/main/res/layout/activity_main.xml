<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1c4e9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_below="@+id/row_two_images_linear_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="122dp">

        <Button
        android:id="@+id/true_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/true_button"
        android:background="#81c784"
        android:textColor="#4a148c"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        style="?android:attr/buttonBarButtonStyle"/>

        <Button
        android:id="@+id/false_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/false_button"
        android:background="#81c784"
        android:textColor="#4a148c"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <Button
        android:id="@+id/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous_button"
        android:background="#a5d6a7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="#4a148c"
        android:layout_margin="16dp"
        />


    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next_button"
        android:background="#a5d6a7"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="#4a148c"
        android:layout_margin="16dp"
        />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:textColor="#1b5e20"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_below="@+id/row_two_images_linear_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

    <LinearLayout
        android:id="@+id/row_one_images_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/orang_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orang"
            android:contentDescription="@string/content_desc_orang"
        />

        <ImageView
            android:id="@+id/koala_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/koala"
            android:contentDescription="@string/content_desc_koala"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row_two_images_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/row_one_images_linear_layout"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/porcupine_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/porcupine"
            android:contentDescription="@string/content_desc_porcupine"/>

        <ImageView
            android:id="@+id/monkey_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/monkey"
            android:contentDescription="@string/content_desc_monkey"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheat_button"
        android:id="@+id/cheat_button"
        android:layout_alignBottom="@+id/next_button"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
